package com.Java8UdemyCourse.Polymorphism;



class Movie{
	private String name;
	
	public Movie(String name){
		this.name = name;
	}
	
	public String plot(){
		return "No Plot Here";
	}
	

class Jaws extends Movie{
	public Jaws(){
		super("Jaws");
	}
	
	public String plot(){
		return "A shark that eats lot of people";
	}
}

class Independenceday extends Movie{

	public Independenceday() {
		super("Independenceday");
	}

	@Override
	public String plot() {
		// TODO Auto-generated method stub
		return "Aliens try to take over the earth";
	}
	
class MazeRunner extends Movie{

	public MazeRunner() {
		super("MazeRunner");
		// TODO Auto-generated constructor stub
	}

	@Override
	public String plot() {
		// TODO Auto-generated method stub
		return "Kids try to escape a Maze";
	}
	
	
}

class Starwars extends Movie{

	public Starwars() {
		super("Starwars");
		// TODO Auto-generated constructor stub
	}

	@Override
	public String plot() {
		// TODO Auto-generated method stub
		return "Battle of Spaceships";
	}
	
	
}

class Forgettable extends Movie{

	public Forgettable() {
		super("FOrgettable");
		// TODO Auto-generated constructor stub
	}

	// No Plot method
	
	
}
	
	
}
}

public class Main {

	public static void main(String[] args) {
		
		}
	
    public static Movie randomMovie(){
		
		int randomNumber  = (int) (Math.random() * 5) +1;
		System.out.println(" Random number generated was : "+ randomNumber);
		
		switch(randomNumber) {
		    case1: 
		    	return new Jaws();
		    case2: 
			    return new Independenceday();
		    case3:
			    return new MazeRunner();
		    case4:
			    return new StarWars();
		    case5:
			    return new Forgetable();
		    
		
		
		}
		return null;
		
	}


}
