package com.Java8UdemyCourse.forLoop;

public class forLoopExample {
	
	public static double calcInterest(double amount, double interest){
		return (amount * (interest/100));
		
	}

	public static void main(String[] args) {
		
		for (interest = 1; interest < 13; interest++){
			
			double total = calcInterest(10,000);
			
			System.out.println(" Given Amount at "+ interest + "% is " );

		}
		
		
	}

}
