package methodsAndMoreMethods;

public class methods {
	

	
	public static String playerName;
	public static int scoreTablePosition;
	public static int score;

	public static void displayHighScorePosition(playerName, scoreTablePosition){
		System.out.println("The player" + playerName + "has managed to score the position"
		+ scoreTablePosition);
	}
	
	public static int calculateHighScore(score){
		if(score >= 1000){
			scoreTablePosition = 1;
		} else if (score > 500 && score < 1000){
			scoreTablePosition=2;
		} else if (score > 100 && score < 500){
			scoreTablePosition=3;
		} else {
			scoreTablePosition=4;
		}
	}
	
	public static void calculateScore() {
		boolean gameOver = true;
		int score = 800;
		int levelCompleted = 5;
		int bonus = 100;
		
		if(gameOver){
			int finalScore = score + (levelCompleted * bonus);
			System.out.println(" Your final score was "+finalScore);
		}
	}

	public static void main(String[] args) {
		boolean gameOver = true;
		int score = 800;
		int levelCompleted = 5;
		int bonus = 100;
		
		calculateScore();
		gameOver = true;
		score = 10000;
		levelCompleted = 8;
		bonus = 200;
		
		if(gameOver){
			int finalScore = score + (levelCompleted * bonus);
			System.out.println(" Your final score was "+finalScore);
		}
		
		

}


}
